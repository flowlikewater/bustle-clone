{{#if updateButtonIsClicked}}
  <h4>Update {{article.writer}}'s {{article.title}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="writer">Writer</label>
        {{input value=article.writer id="writer" placeholder=article.writer}}
      </div>

      <div class="form-group">
        <label for="title">Title</label>
        {{input value=article.title id="title" placeholder=article.title}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input value=article.date id="date" placeholder=article.date}}
      </div>

      <div class="form-group">
        <label for="imagetop">Top Image</label>
        {{input value=article.imagetop id="imagetop" placeholder=article.imagetop}}
      </div>

      <div class="form-group">
        <label for="body">Body</label>
        {{input value=article.body id="body" placeholder=article.body}}
      </div>

      <div class="form-group">
        <label for="imagebottom">Bottom Image</label>
        {{input value=article.imagebottom id="imagebottom" placeholder=article.imagebottom}}
      </div>

      <div class="form-group">
        <label for="source">Source</label>
        {{input value=article.source id="source" placeholder=article.source}}
      </div>

      <button {{action 'update' article}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateArticle'}}>Update</button>
{{/if}}

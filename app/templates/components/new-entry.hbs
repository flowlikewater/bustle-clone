{{#if newArticle}}
<div class='container' style='text-align: center'>
  <h1>Write new article</h1>
  <form>
    <div class="form-group">
      <label for="writer">Writer</label>
      {{input value=writer id="writer"}}
    </div>
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title"}}
    </div>
    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date"}}
    </div>
    <div class="form-group">
      <label for="imagetop">Top Image</label>
      {{input value=imagetop id="imagetop"}}
    </div>
    <div class="form-group">
      <label for="body">Body Text</label>
      {{input value=body id="body"}}
    </div>
    <div class="form-group">
      <label for="imagebottom">Bottom image</label>
      {{input value=imagebottom id="imagebottom"}}
    </div>
    <div class="form-group">
      <label for="source">Source</label>
      {{input value=source id="source"}}
    </div>
    <button {{action 'saveArticle'}}> Save article </button>
    <button {{action 'cancelArticle'}}> Cancel </button>
  </form>
</div>
{{else}}
  <button {{action 'addNewArticle'}}> New Article </button>
{{/if}}
